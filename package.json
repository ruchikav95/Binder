{
  "name": "app-backend",
  "description": "Backend",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "test": "nodemon --exec 'cross-env NODE_ENV=test mocha ./src/**/*.test.js --exit || exit 1'",
    "db:reset:localhost": "cross-env MIGRATION_ENV=localhost node ./migrations/reset",
    "db:reset:production": "cross-env MIGRATION_ENV=production node ./migrations/reset"
  },
  "dependencies": {
    "bcrypt": "3.0.6",
    "cors": "2.8.5",
    "express": "4.17.1",
    "formidable": "1.2.1",
    "helmet": "3.21.2",
    "if-env": "^1.0.4",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.15",
    "moment": "2.24.0",
    "mysql2": "2.0.0",
    "nodemailer": "6.3.1",
    "pg": "7.12.1",
    "pg-hstore": "2.3.3",
    "sequelize": "5.21.2",
    "sqlite": "3.0.3"
  },
  "engines": {
    "node": "8"
  },
  "private": true,
  "devDependencies": {
    "concurrently": "^5.0.0",
    "cross-env": "6.0.3",
    "mocha": "6.2.2",
    "node-mocks-http": "1.8.0",
    "nodemon": "1.19.4",
    "sequelize-cli": "5.5.1"
  }
}
